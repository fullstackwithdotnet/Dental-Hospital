@model DIMS.ViewModels.OPDRevisitRegistrationViewModel

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box box-default box-solid">
        <div class="box-header with-border">
            <h3 class="box-title"> Revisit Registration</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.OPNo, new { @class = "col-md-1" })
                            <div class="col-md-2">
                                @Html.DisplayFor(x => x.OPNo, new { @class = "col-md-1" })
                            </div>
                            @Html.LabelFor(x => x.PatientName, new { @class = "col-md-2 " })
                            <div class="col-md-2">
                                @Html.DisplayFor(x => x.PatientName, new { @class = "col-md-1 " })
                            </div>
                            @Html.LabelFor(x => x.AgeGender, new { @class = "col-md-1 " })
                            <div class="col-md-2">
                                @Html.DisplayFor(x => x.AgeGender, new { @class = "col-md-1 " })
                            </div>
                            @Html.LabelFor(x => x.Phone, new { @class = "col-md-1 " })
                            <div class="col-md-1">
                                @Html.DisplayFor(x => x.Phone, new { @class = "col-md-1" })
                            </div>
                        </div>
                        
                            @Html.HiddenFor(x => x.PatientId)
                            @Html.HiddenFor(x => x.DeptId)
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-5">
            </div>
            <div class="col-xs-2">              
                <input type="submit" value="Save" class="fa fa-save btn btn-success"/>
            </div>
            <div class="col-xs-5">
            </div>
        </div>        
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    @if (Model.RevisitFollowUpList.Count() > 0)
                    {
                        <div class="form-group">
                            @Html.Partial("../Followup/Index", Model.RevisitFollowUpList)
                        </div>
                    }
                    <div class="form-group">
                        @Html.Partial("../ReferralStatus/Create", Model.CreatedepartmentReferredStatus,
                    new ViewDataDictionary()
                    {
                        TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "CreatedepartmentReferredStatus" }
                    })
                    </div>
                </div>
            </div>
        </div>
    </div>
}













