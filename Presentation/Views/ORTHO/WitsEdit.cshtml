
@model DIMS.ViewModels.OrthoAnalysisViewModal
@{

    ViewBag.Title = "Steiner Analysis";
}

<h2>@Html.DisplayFor(x => x.AnalysisDisplayName)</h2>

@using (Html.BeginForm("SaveWits", "Ortho", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
             
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-8">
                                <img src="~/Content/Images/Steiner Sticks_667_171.jpg" class="img-responsive" alt="12" />
                            </div>
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="form-group form-group-sm">
                                            @Html.LabelFor(x => x.WitsMale, new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.WitsMale, new { @class = "form-control col-md-4" })
                                            @Html.HiddenFor(x=>x.AnalysisId)
                                            @Html.HiddenFor(x => x.OrthoId)
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="form-group form-group-sm">
                                            @Html.LabelFor(x => x.WitsFemale, new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(x => x.WitsFemale, new { @class = "form-control col-md-4" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="form-group form-group-sm">
                                            @Html.LabelFor(x => x.Inference, new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(x => x.Inference, new { @class = "form-control col-md-4" })
                                        </div>
                                        <div class="col-md-8 hidden">
                                            @Html.TextAreaFor(x => x.InferenceId, new { @class = "form-control col-md-4" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-offset-4">
            <div class="form-group">
                <div class="col-sm-1">
                    <input type="submit" value="Save" class="fa fa-save btn btn-success"/>
                </div>
            </div>
        </div>
    </div>
}





