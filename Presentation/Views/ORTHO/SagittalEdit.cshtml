@model DIMS.ViewModels.OrthoAnalysisViewModal

@{
    ViewBag.Title = "Sagittal Analysis";
}

<h2>Sagittal Analysis</h2>



@using (Html.BeginForm("SaveSagittal", "Ortho", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.Partial("../ORTHO/_ViewSagittalEdit", Model.SagittalAnalysisList,
                                new ViewDataDictionary()
                                    {
                                        TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "SagittalAnalysisList" }
                                    })
                        </div>
                        @Html.HiddenFor(x => x.OrthoId)
                        @Html.HiddenFor(x => x.AnalysisId)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(x => x.SNLength, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(x => x.SNLength, new { @class = "form-control col-md-4" })
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(x => x.BasicUpperLip, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(x => x.BasicUpperLip, new SelectList(Model.UpperLipList, "CodeId", "CodeDescription"), htmlAttributes: new { @class = "form-control col-md-6" })
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(x => x.SoftTissue, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(x => x.SoftTissue, new SelectList(Model.SoftTissueList, "CodeId", "CodeDescription"), htmlAttributes: new { @class = "form-control col-md-6" })
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(x => x.Inference, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-8">
                                        @Html.TextAreaFor(x => x.Inference, new { @class = "form-control col-md-4" })
                                    </div>
                                </div>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(x => x.Skeletal, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(x => x.Skeletal, new SelectList(Model.SkeletalList, "CodeId", "CodeDescription"), htmlAttributes: new { @class = "form-control col-md-6" })
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(x => x.Severity, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(x => x.Severity, new SelectList(Model.SeverityList, "CodeId", "CodeDescription"), htmlAttributes: new { @class = "form-control col-md-6" })
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(x => x.InferSoftTissue, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-6">
                                        @Html.DropDownListFor(x => x.InferSoftTissue, new SelectList(Model.InferSoftTissueList, "CodeId", "CodeDescription"), htmlAttributes: new { @class = "form-control col-md-6" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12 col-md-offset-4">
                                <div class="form-group">
                                    <div class="col-sm-1">
                                        <input type="submit" value="Save" class="fa fa-save btn btn-success"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}





