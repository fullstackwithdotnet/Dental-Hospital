@model DIMS.ViewModels.OrthoAnalysisViewModal
@{
    ViewBag.Title = "Schwarz  Analysis";
}

<h2>@Html.DisplayFor(x => x.AnalysisDisplayName)</h2>

@using (Html.BeginForm("SaveSchwarz", "Ortho", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.Partial("../ORTHO/_ViewSchwarzEdit", Model.SchwarzAnalysisList,
                                new ViewDataDictionary()
                                    {
                                        TemplateInfo = new TemplateInfo() { HtmlFieldPrefix = "SchwarzAnalysisList" }
                                    })
                        </div>
                    </div>
                    @Html.HiddenFor(x => x.OrthoId)
                    @Html.HiddenFor(x => x.AnalysisId)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="form-group form-group-sm">
                                <div class="col-md-2 control-label">
                                    @Html.LabelFor(x => x.Inference, new { @class = "col-md-3 control-label" })
                                </div>
                                <div class="col-md-6">
                                    @Html.TextAreaFor(x => x.Inference, new { @class = "form-control col-md-4" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-12 col-md-offset-4">
                                <div class="form-group">
                                    <div class="col-sm-1">
                                        <input type="submit" value="Save" class="fa fa-save btn btn-success"/>
                                    </div>
                                </div>
                            </div>
                        </div>     
                    </div>                 
                </div>
            </div>
        </div>
    </div>
    
}





