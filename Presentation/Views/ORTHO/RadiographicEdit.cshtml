@model DIMS.ViewModels.OrthoAnalysisViewModal
@{

    ViewBag.Title = "Steiner Analysis";
}

<h2>@Html.DisplayFor(x => x.AnalysisDisplayName)</h2>

@using (Html.BeginForm("SaveRadiographic", "Ortho", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="form-group form-group-sm">
                                            @Html.LabelFor(x => x.ActualWidth, new { @class = "col-md-5 control-label" })
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(x => x.ActualWidth, new { @class = "form-control col-md-4" })
                                            @Html.HiddenFor(x => x.AnalysisId)
                                            @Html.HiddenFor(x => x.OrthoId)
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="form-group form-group-sm">
                                            @Html.LabelFor(x => x.RadiographicWidth, new { @class = "col-md-5 control-label" })
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(x => x.RadiographicWidth, new { @class = "form-control col-md-4" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="form-group form-group-sm">
                                            @Html.LabelFor(x => x.RadiographicPremolar, new { @class = "col-md-5 control-label" })
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(x => x.RadiographicPremolar, new { @class = "form-control col-md-4", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="form-group form-group-sm">
                                            @Html.LabelFor(x => x.Inference, new { @class = "col-md-3 control-label" })
                                        <div class="col-md-6">
                                            @Html.TextAreaFor(x => x.Inference, new { @class = "form-control col-md-4" })
                                        </div>
                                        <div class="col-md-8 hidden">
                                            @Html.TextAreaFor(x => x.InferenceId, new { @class = "form-control col-md-4" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="row">
                                    <h5><strong>Formulas :</strong></h5>
                                </div>
                                <div class="row">
                                    <strong>
                                        i) Actual width of unerupted premolar   
                                        <br />
                                        Actual width of primary molars/
                                        <br />
                                         Radiographic width of primary molars
                                    </strong>
                                </div>
                            </div>
                        </div>
                        <br />

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-md-offset-4">
            <div class="form-group">
                <div class="col-sm-1">
                    <input type="submit" value="Save" class="fa fa-save btn btn-success"/>
                </div>
            </div>
        </div>
    </div>
}







@section scripts {
    <script type="text/javascript">

        $("#ActualWidth").change(function () {
            
            calculation();
        });

        $("#RadiographicWidth").change(function () {
            
            calculation();
        });

        var calculation = function () {
            var $ActualWidth = 0; var $RadiographicWidth = 0; var $RadiographicPremolar = 0;//TanakaMandibular
            $ActualWidth = parseFloat($("#ActualWidth").val());
            $RadiographicWidth = parseFloat($("#RadiographicWidth").val());
            $RadiographicPremolar = parseFloat($ActualWidth / $RadiographicWidth).toFixed(2);
            $("#RadiographicPremolar").val($RadiographicPremolar);

        }        
         
    </script>

}
