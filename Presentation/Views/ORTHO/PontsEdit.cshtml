@model DIMS.ViewModels.OrthoAnalysisViewModal

@{
    ViewBag.Title = "Pont's Analysis";
}

<h2>Pont's Analysis</h2>
<br />
@using (Html.BeginForm("SavePonts", "Ortho", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group form-group-sm">
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(x => x.SumIncisors, new { @class = "col-lg-12 control-label" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.TextBoxFor(model => model.SumIncisors, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="form-group form-group-sm">
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(x => x.CalcPreMolar, new { @class = "col-lg-12 control-label" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.TextBoxFor(model => model.CalcPreMolar, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="form-group form-group-sm">
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(x => x.CalcMolar, new { @class = "col-lg-12 control-label" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.TextBoxFor(model => model.CalcMolar, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            </div>


                                        </div>
                                        <div class="col-md-6">
                                            <div class="row">
                                                <div class="form-group form-group-sm">
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(x => x.MeasPreMolar, new { @class = "col-lg-12 control-label" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.TextBoxFor(model => model.MeasPreMolar, new { @class = "form-control col-sm-4" })
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="form-group form-group-sm">
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(x => x.MeasMolar, new { @class = "col-lg-12 control-label" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.TextBoxFor(model => model.MeasMolar, new { @class = "form-control col-sm-4" })
                                                    </div>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="form-group form-group-sm">
                                                    <div class="col-md-6">
                                                        @Html.LabelFor(x => x.Inference, new { @class = "col-lg-6 control-label" })
                                                    </div>
                                                    <div class="col-md-6">
                                                        @Html.TextAreaFor(model => model.Inference, new { @class = "form-control col-sm-4" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-5 col-md-offset-4">
                                                <div class="form-group">
                                                    <div class="col-sm-1">
                                                        @Html.HiddenFor(x => x.OrthoId)
                                                        @Html.HiddenFor(x => x.AnalysisId)
                                                        <input type="submit" value="Save" class="fa fa-save btn btn-success"/>
                                                    </div>
                                                    <div class="hidden">
                                                        @Html.TextBoxFor(x => x.AnalysisId)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                @*<div class="col-md-1"></div>*@
                                <div class="col-md-5">
                                    <h5 style="color: #357ebd"><b>PONT'S -Formulas</b></h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    <div class="col-md-1">
                                        <b>C.P.V</b>
                                    </div>
                                    <div class="col-md-8">
                                        <b> S.I*100/80</b>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group form-group-sm">
                                    <div class="col-md-1">
                                        <b>C.M.V</b>
                                    </div>
                                    <div class="col-md-8">
                                        <b> S.I*100/64</b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



