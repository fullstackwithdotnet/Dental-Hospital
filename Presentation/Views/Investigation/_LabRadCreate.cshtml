    <div class="row">
        <div class="col-md-2">
            @Html.HiddenFor(x => x.DeptId)
            @Html.LabelFor(model => model.ServiceType)
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => model.LabGroupId)
        </div>
        <div class="@strCol">
            @Html.LabelFor(model => model.ServiceName)
        </div>
        <div class="col-md-2 @strHidden">
           Select Child Service
        </div>
        <div class="col-md-2">
            @Html.LabelFor(model => model.TeethNo)
        </div>

    </div>

    <div class="row">
        <div class="form-group form-group-sm">
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.ServiceDeptName, new SelectList(Model.ServicesTypeDetails, "DeptId", "DeptName"), "Select", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.LabGroupId, new SelectList(Model.GroupList, "GroupId", "GroupName"), "Select", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class=" @strCol">
                @Html.DropDownListFor(model => model.LabRadServiceName, new SelectList(Model.BillDropLabRadServicesList, "ServiceId", "ServiceName"), "Select", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-2 @strHidden">
                @Html.DropDownList("subService" ,Enumerable.Empty<SelectListItem>(), "--- SELECT SUB SERVICE ---", htmlAttributes: new { @class = "form-control multiselect" })
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.LabRadTeethNo, new { @class = "form-control", @readonly = "readonly", maxlength = "25" })
            </div>
            <div class="hidden">
                @Html.HiddenFor(model => model.LabRadRate, new { @class = "form-control OnlyNumber", pattern = "\\d*", maxlength = "5" })
                @Html.HiddenFor(model => model.LabRadDiscountPer, new { @class = "form-control OnlyNumber", pattern = "\\d*", maxlength = "3" })
                @Html.HiddenFor(model => model.LabRadDiscountRs, new { @class = "form-control OnlyNumber", @readonly = "readonly", pattern = "\\d*", maxlength = "3" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
        </div>
        <div class="col-md-2">
            @Html.LabelFor(model => model.Qty)
        </div>
        <div class="col-md-2">
            @Html.LabelFor(model => model.Amount)
        </div>
        <div class="col-md-2">
            @Html.LabelFor(model => model.NetAmount)
        </div>
        <div class="col-md-1">
        </div>

    </div>
    <div class="row">
        <div class="form-group form-group-sm">
            <div class="col-md-5">
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.LabRadQty, new { @class = "form-control OnlyNumber", pattern = "\\d*", maxlength = "2" })
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.LabRadAmount, new { @class = "form-control OnlyNumber", @readonly = "readonly", pattern = "\\d*", maxlength = "5" })
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.LabRadNetAmount, new { @class = "form-control OnlyNumber", @readonly = "readonly" })
            </div>
            <div class="col-md-1">
                @if (Model.ReadOnlyApproval3 != true)
                {
                    <a id="btnLabRadAdd" class="btn btn-primary btn-sm"> Add</a>
                }
               
            </div>
        </div>
    </div>
</div>

