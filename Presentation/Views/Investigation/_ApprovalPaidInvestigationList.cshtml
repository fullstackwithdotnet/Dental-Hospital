            </td>
            <td>
                @Html.DisplayFor(model => item.DiscountPer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaidAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayableAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreatmentStatusName)
            </td>



        </tr>
    }

</table>


