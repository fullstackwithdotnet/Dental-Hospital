@model IEnumerable<DIMS.ViewModels.BillingViewModal>
@{
    ViewBag.Title = "_PaidInvestigationList";
}

@{
    string modelName = ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix;
    int index = 0;
}
@functions{
    string GetId(string fieldName, int index)
    {
        return string.Format("{0}[{2}]_{1}", ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix, fieldName, index);
    }
    string GetName(string fieldName, int index)
    {
        return string.Format("{0}[{2}].{1}", ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix, fieldName, index);
    }
}


<h5><strong>Paid Treatments</strong></h5>
<table id="tbPaidTreatments" class="table">
    <tr>

        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.BillNo)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.BillDateTimeDisplay)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.ServiceQty)
        </th>
        @*<th class="col-md-1">
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.DiscountAmt)
            </th>*@
        <th class="col-md-1">
