                    @Html.DisplayFor(x => x.OpNo)
                </div>
                @Html.LabelFor(x => x.PatientName, new { @class = "col-md-1" })
                <div class="col-md-4">
                    @Html.DisplayFor(x => x.PatientName)
                </div> 
                @Html.LabelFor(x => x.AgeGender, new { @class = "col-md-2" })
                <div class="col-md-2">
                    @Html.DisplayFor(x => x.AgeGender)
                </div>              
            </div>
        </div>
