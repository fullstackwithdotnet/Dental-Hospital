        $("#LymphStatus").change(function () {
            
            var dropdowntext = $("#MLymphNodeStatusId option:selected").text();
            if (dropdowntext == "No") {
                $("#Location").hide();
                $("#Number").hide();
                $("#Tender").hide();
                $("#Consistency").hide();
                $("#Fixity").hide();
                $("#Staging").hide();
            }
            else {
                $("#Location").show();
                $("#Number").show();
                $("#Tender").show();
                $("#Consistency").show();
                $("#Fixity").show();
                $("#Staging").show();
            }
        });

        $("#BLymphStatus").change(function () {
            
            var dropdowntext = $("#BLymphNodeStatusId option:selected").text();
            if (dropdowntext == "No") {
                $("#BLocation").hide();
                $("#BTender").hide();
                $("#BConsistency").hide();
            }
            else {
                $("#BLocation").show();
                $("#BTender").show();
                $("#BConsistency").show();
            }
        });
    </script>
