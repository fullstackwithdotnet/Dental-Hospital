
@model DIMS.ViewModels.BillingViewModal

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="form-group form-group-sm">
                @Html.LabelFor(x => x.BillDateTime, new { @class = "col-md-2 " })
                <div class="col-md-2">
                    @Html.DisplayFor(x => x.BillDateTime)
                </div>
                @Html.LabelFor(x => x.OpNo, new { @class = "col-md-2" })
                <div class="col-md-3">
                    @Html.DisplayFor(x => x.OpNo)
                </div>
                @Html.LabelFor(x => x.PatientName, new { @class = "col-md-2" })
                <div class="col-md-3">
                    @Html.DisplayFor(x => x.PatientName)
                </div>               
            </div>
        </div>
        <div class="row">
            <div class="form-group form-group-sm">
                @Html.LabelFor(x => x.Phone, new { @class = "col-md-2 " })
                <div class="col-md-3">
                    @Html.DisplayFor(x => x.Phone)
                </div>
               @Html.LabelFor(x => x.AgeGender, new { @class = "col-md-2 " })
               <div class="col-md-3">
                  @Html.DisplayFor(x => x.AgeGender)
               </div>
               @Html.LabelFor(x => x.BillNo, new { @class = "col-md-2 " })
               <div class="col-md-2">
                  @Html.DisplayFor(x => x.BillNo)
               </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group form-group-sm">
                @Html.LabelFor(x => x.DeptName, new { @class = "col-md-2 " })
                <div class="col-md-2">
                    @Html.DisplayFor(x => x.DeptName)
                </div>
                @Html.LabelFor(x => x.BillAmount, new { @class = "col-md-2 " })
                <div class="col-md-2">
                    @Html.DisplayFor(x => x.BillAmount)
                </div>
            </div>
        </div>
    </div>
</div>


  