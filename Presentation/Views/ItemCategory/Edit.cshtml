@model DIMS.ViewModels.ItemCategoryViewModel

@{
    ViewBag.Title = "Edit Item Category";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="box box-default box-solid">
            <div class="box-header with-border">
                <h4 class="box-title"> Update Item Category</h4>
            </div>
            <div class="box-body">
                <div class="form-group hidden">
                    @Html.LabelFor(model => model.ItemCategoryId, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.ItemCategoryId, new { @class = "form-control  " })
                        @Html.ValidationMessageFor(model => model.ItemCategoryId)
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.LabelFor(model => model.CategoryName, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control  " })
                        @Html.ValidationMessageFor(model => model.CategoryName)
                    </div>
                </div>
                
                <div class="form-group form-group-sm">
                    @Html.LabelFor(model => model.CategoryDescription, new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.TextAreaFor(model => model.CategoryDescription, new { @class = "form-control " })
                        @Html.ValidationMessageFor(model => model.CategoryDescription)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-10">
                        <input type="submit" value="Update" class="fa fa-update btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

