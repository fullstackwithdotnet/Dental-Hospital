@model DIMS.ViewModels.CONSViewModel

@{
    int index = 0;
}

<div class="panel-group" id="accordion">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseSix">Surgical Procedure<span class="small text-fuchsia"> (click to expand/collapse)</span></a>
        </h4>
    </div>
    <div id="collapseSix" class="panel-collapse collapse" style="height: auto;">
        <div class="panel-body">

            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.ToothNumbersB, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.DropDownListFor(x => x.ToothNumbersB, Model.ToothLister, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.HiddenFor(model => model.SurgicalProId)
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.Premedication, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.Premedication, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.AnesthesiaUsed, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.AnesthesiaUsed, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.FlapDesign, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.FlapDesign, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.Graft, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.Graft, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>


                    </div>
                    <div class="col-md-6">

                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.Suturing, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.Suturing, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.SpReview1, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.SpReview1, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.SpReview2, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.SpReview2, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.SpReview3, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.SpReview3, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group form-group-sm">
                                <div class="col-md-offset-4">
                                    <a class="btnSurgPro btn btn-success" id="btnSurgicalProAdd">Add</a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="table-responsive">


                        <table class="table table-bordered" id="tbSurgicalProDetails">
                            <tr style="font-size:x-small">
                                <th hidden>
                                    @Html.DisplayNameFor(model => model.ConservativeId)
                                    @Html.DisplayNameFor(model => model.SurgicalProId)
                                </th>

                                <th colspan="2">
                                    Action

                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ToothNumbersB)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Premedication)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AnesthesiaUsed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FlapDesign)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Graft)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Suturing)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SpReview1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SpReview2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SpReview3)
                                </th>

                                <th></th>
                            </tr>

                            @foreach (var item in Model.SpList)
                            {
                                <tr style="font-size:x-small">
                                    <td class="hidden">
                                        @Html.TextBoxFor(modelItem => item.ConservativeId, new { @class = "col-sm-10", @id = "SpList[" + index + "]_" + "ConservativeId", @Name = "SpList[" + index + "]." + "ConservativeId" })
                                        @Html.TextBoxFor(modelItem => item.SurgicalProId, new { @class = "col-sm-10 js_SurgicalProId", @id = "SpList[" + index + "]_" + "SurgicalProId", @Name = "SpList[" + index + "]." + "SurgicalProId" })
                                    </td>

                                    <td>
                                        <button type="button" class="SurgicalProToothEdit btn btn-primary btn-xs" data-id="@item.SurgicalProId">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </button>
                                    </td>
                                    <td>
                                        <button type="button" class="SurgicalProToothdelete btn btn-danger btn-xs" data-id="@item.SurgicalProId">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </button>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ToothNumber, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.ToothNumber, new { @class = "form-control kHidden", @id = "SpList[" + index + "]_" + "ToothNumber", @Name = "SpList[" + index + "]." + "ToothNumber" })
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Premedication, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.Premedication, new { @class = "form-control js_Premedication", @id = "SpList[" + index + "]_" + "Premedication", @Name = "SpList[" + index + "]." + "Premedication" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AnesthesiaUsed, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.AnesthesiaUsed, new { @class = "form-control js_AnesthesiaUsed", @id = "SpList[" + index + "]_" + "AnesthesiaUsed", @Name = "SpList[" + index + "]." + "AnesthesiaUsed" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FlapDesign, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.FlapDesign, new { @class = "form-control js_FlapDesign", @id = "SpList[" + index + "]_" + "FlapDesign", @Name = "SpList[" + index + "]." + "FlapDesign" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Graft, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.Graft, new { @class = "form-control js_Graft", @id = "SpList[" + index + "]_" + "Graft", @Name = "SpList[" + index + "]." + "Graft" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Suturing, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.Suturing, new { @class = "form-control js_Suturing", @id = "SpList[" + index + "]_" + "Suturing", @Name = "SpList[" + index + "]." + "Suturing" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SpReview1, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.SpReview1, new { @class = "form-control js_SpReview1", @id = "SpList[" + index + "]_" + "SpReview1", @Name = "SpList[" + index + "]." + "SpReview1" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SpReview2, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.SpReview2, new { @class = "form-control js_SpReview2", @id = "SpList[" + index + "]_" + "SpReview2", @Name = "SpList[" + index + "]." + "SpReview2" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SpReview3, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.SpReview3, new { @class = "form-control js_SpReview3", @id = "SpList[" + index + "]_" + "SpReview3", @Name = "SpList[" + index + "]." + "SpReview3" })
                                    </td>


                                </tr>
                                index++;
                            }
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
