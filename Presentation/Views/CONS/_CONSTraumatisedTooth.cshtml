                        <table class="table table-bordered" id="tbTraumatisedDetails">
                            <tr style="font-size:x-small">
                                <th hidden>
                                    @Html.DisplayNameFor(model => model.ConservativeId)
                                    @Html.DisplayNameFor(model => model.TraumatisedToothId)
                                </th>

                                <th colspan="2">
                                    Action

                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ToothNumbersE)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EllisType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoftTissueInjuries)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FacialSkeletalInjuries)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LuxationInjuries)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TtVitalityTesting)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TtRadiographicInterpretation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TtImpressionPhotographsCast)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TtRestoration)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Splinting)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CrownLengthening)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SurgicalManagement)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrthodonticIntrusion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TtReview1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TtReview2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TtReview3)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model.TtList)
                            {
                                <tr style="font-size:x-small">
                                    <td class="hidden">
                                        @Html.TextBoxFor(modelItem => item.ConservativeId, new { @class = "col-sm-10", @id = "TtList[" + index + "]_" + "ConservativeId", @Name = "TtList[" + index + "]." + "ConservativeId" })
                                        @Html.TextBoxFor(modelItem => item.TraumatisedToothId, new { @class = "col-sm-10 js_TraumatisedToothId", @id = "TtList[" + index + "]_" + "TraumatisedToothId", @Name = "TtList[" + index + "]." + "TraumatisedToothId" })
                                    </td>
                                    <td>
                                        <button type="button" class="TraumatisedToothEdit btn btn-primary btn-xs" data-id="@item.TraumatisedToothId">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </button>
                                    </td>
                                    <td>
                                        <button type="button" class="TraumatisedToothdelete btn btn-danger btn-xs" data-id="@item.TraumatisedToothId">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </button>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ToothNumber, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.ToothNumber, new { @class = "form-control nHidden", @id = "TtList[" + index + "]_" + "ToothNumber", @Name = "TtList[" + index + "]." + "ToothNumber" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EllisType, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.EllisType, new { @class = "form-control js_EllisType", @id = "TtList[" + index + "]_" + "EllisType", @Name = "TtList[" + index + "]." + "EllisType" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoftTissueInjuries, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.SoftTissueInjuries, new { @class = "form-control js_SoftTissueInjuries", @id = "TtList[" + index + "]_" + "SoftTissueInjuries", @Name = "TtList[" + index + "]." + "SoftTissueInjuries" })
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.FacialSkeletalInjuries, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.FacialSkeletalInjuries, new { @class = "form-control js_FacialSkeletalInjuries", @id = "TtList[" + index + "]_" + "FacialSkeletalInjuries", @Name = "TtList[" + index + "]." + "FacialSkeletalInjuries" })
