                                        @Html.HiddenFor(modelItem => item.LuxationInjuries, new { @class = "form-control js_LuxationInjuries", @id = "TtList[" + index + "]_" + "LuxationInjuries", @Name = "TtList[" + index + "]." + "LuxationInjuries" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TtVitalityTesting, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.TtVitalityTesting, new { @class = "form-control js_TtVitalityTesting", @id = "TtList[" + index + "]_" + "TtVitalityTesting", @Name = "TtList[" + index + "]." + "TtVitalityTesting" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TtRadiographicInterpretation, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.TtRadiographicInterpretation, new { @class = "form-control js_TtRadiographicInterpretation", @id = "TtList[" + index + "]_" + "TtRadiographicInterpretation", @Name = "TtList[" + index + "]." + "TtRadiographicInterpretation" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TtImpressionPhotographsCast, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.TtImpressionPhotographsCast, new { @class = "form-control js_TtImpressionPhotographsCast", @id = "TtList[" + index + "]_" + "TtImpressionPhotographsCast", @Name = "TtList[" + index + "]." + "TtImpressionPhotographsCast" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TtRestoration, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.TtRestoration, new { @class = "form-control js_TtRestoration", @id = "TtList[" + index + "]_" + "TtRestoration", @Name = "TtList[" + index + "]." + "TtRestoration" })
                                    </td>
                                    <td>
