@model DIMS.ViewModels.CONSViewModel

@{
    int index = 0;
}

<div class="panel-group" id="accordion">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapseSeven">Esthetic Correction<span class="small text-fuchsia"> (click to expand/collapse)</span></a>
        </h4>
    </div>
    <div id="collapseSeven" class="panel-collapse collapse" style="height: auto;">
        <div class="panel-body">

            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.ToothNumbersC, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.DropDownListFor(x => x.ToothNumbersC, Model.ToothLister, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.HiddenFor(model => model.EstheticCorrId)
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="col-md-6">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.ImpressionPhotograph, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.ImpressionPhotograph, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.VitalityTesting, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.VitalityTesting, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.RadiographicInterpretation, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.RadiographicInterpretation, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.TreatmentProcedure, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.TreatmentProcedure, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>

                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.ToothPreparation, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.ToothPreparation, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">


                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.ShadeSelection, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.ShadeSelection, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.EcInsertionCementation, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.EcInsertionCementation, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.FinishingPolishing, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.FinishingPolishing, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>

                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.EcReview1, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.EcReview1, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.EcReview2, new { @class = "col-md-5 control-label" })
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.EcReview2, 2, 2, new { @class = "form-control", style = "min-height:30px!important;width:200px;" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group form-group-sm">
                                <div class="col-md-offset-4">
                                    <a class="btnEstheticCor btn btn-success" id="btnEstheticCorrAdd">Add</a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="table-responsive">

                        <table class="table table-bordered" id="tbEstheticCorrDetails">
                            <tr style="font-size:x-small">
                                <th hidden>
                                    @Html.DisplayNameFor(model => model.ConservativeId)
                                    @Html.DisplayNameFor(model => model.EstheticCorrId)
                                </th>

                                <th colspan="2">
                                    Action

                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ToothNumbersC)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.ImpressionPhotograph)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VitalityTesting)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RadiographicInterpretation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TreatmentProcedure)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ToothPreparation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShadeSelection)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EcInsertionCementation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FinishingPolishing)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EcReview1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EcReview2)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model.EcList)
                            {
                                <tr style="font-size:x-small">
                                    <td class="hidden">
                                        @Html.TextBoxFor(modelItem => item.ConservativeId, new { @class = "col-sm-10", @id = "EcList[" + index + "]_" + "ConservativeId", @Name = "EcList[" + index + "]." + "ConservativeId" })
                                        @Html.TextBoxFor(modelItem => item.EstheticCorrId, new { @class = "col-sm-10 js_EstheticCorrId", @id = "EcList[" + index + "]_" + "EstheticCorrId", @Name = "EcList[" + index + "]." + "EstheticCorrId" })
                                    </td>

                                    <td>
                                        <button type="button" class="EstheticCorrToothEdit btn btn-primary btn-xs" data-id="@item.EstheticCorrId">
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </button>
                                    </td>
                                    <td>
                                        <button type="button" class="EstheticCorrToothdelete btn btn-danger btn-xs" data-id="@item.EstheticCorrId">
                                            <i class="glyphicon glyphicon-trash"></i>
                                        </button>
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.ToothNumber, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.ToothNumber, new { @class = "form-control lHidden", @id = "EcList[" + index + "]_" + "ToothNumber", @Name = "EcList[" + index + "]." + "ToothNumber" })
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImpressionPhotograph, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.ImpressionPhotograph, new { @class = "form-control js_ImpressionPhotograph", @id = "EcList[" + index + "]_" + "ImpressionPhotograph", @Name = "EcList[" + index + "]." + "ImpressionPhotograph" })
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.VitalityTesting, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.VitalityTesting, new { @class = "form-control js_VitalityTesting", @id = "EcList[" + index + "]_" + "VitalityTesting", @Name = "EcList[" + index + "]." + "VitalityTesting" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RadiographicInterpretation, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.RadiographicInterpretation, new { @class = "form-control js_RadiographicInterpretation", @id = "EcList[" + index + "]_" + "RadiographicInterpretation", @Name = "EcList[" + index + "]." + "RadiographicInterpretation" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TreatmentProcedure, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.TreatmentProcedure, new { @class = "form-control js_TreatmentProcedure", @id = "EcList[" + index + "]_" + "TreatmentProcedure", @Name = "EcList[" + index + "]." + "TreatmentProcedure" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ToothPreparation, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.ToothPreparation, new { @class = "form-control js_ToothPreparation", @id = "EcList[" + index + "]_" + "ToothPreparation", @Name = "EcList[" + index + "]." + "ToothPreparation" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShadeSelection, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.ShadeSelection, new { @class = "form-control js_ShadeSelection", @id = "EcList[" + index + "]_" + "ShadeSelection", @Name = "EcList[" + index + "]." + "ShadeSelection" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EcInsertionCementation, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.EcInsertionCementation, new { @class = "form-control js_EcInsertionCementation", @id = "EcList[" + index + "]_" + "EcInsertionCementation", @Name = "EcList[" + index + "]." + "EcInsertionCementation" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinishingPolishing, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.FinishingPolishing, new { @class = "form-control js_FinishingPolishing", @id = "EcList[" + index + "]_" + "FinishingPolishing", @Name = "EcList[" + index + "]." + "FinishingPolishing" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EcReview1, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.EcReview1, new { @class = "form-control js_EcReview1", @id = "EcList[" + index + "]_" + "EcReview1", @Name = "EcList[" + index + "]." + "EcReview1" })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EcReview2, new { @class = "control-label" })
                                        @Html.HiddenFor(modelItem => item.EcReview2, new { @class = "form-control js_EcReview2", @id = "EcList[" + index + "]_" + "EcReview2", @Name = "EcList[" + index + "]." + "EcReview2" })
                                    </td>
                                </tr>
                                index++;
                            }

                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
