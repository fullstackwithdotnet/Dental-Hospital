                    @Html.HiddenFor(x => x.LaboratoryResultId)
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group form-group-sm ">
                            @Html.LabelFor(model => model.Remarks, new { @class = "control-label " })
                            @Html.TextAreaFor(x => x.Remarks, new { @class = "form-control " })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group form-group-sm ">
                            @Html.LabelFor(model => model.Impression, new { @class = "control-label " })
                            @Html.TextAreaFor(x => x.Impression, new { @class = "form-control " })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @{
            if (TempData["message"] != null)
            {
                <script type="text/javascript">
                            alert(@Html.Raw(Json.Encode(TempData["message"])));
