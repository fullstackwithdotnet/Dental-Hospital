                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2"><strong>Test Name : </strong></div>
                            <div class="col-md-2 text-blue">
                                @Html.DisplayFor(x => x.ServiceName, new { @class = "#3c8dbc" })
                            </div>
                            <div class="col-md-2"><strong>Group Name :</strong></div>
                            <div class="col-md-2 text-blue">
                                @Html.DisplayFor(x => x.GroupName)
                            </div>
                            <div class="col-md-2"><strong>Tooth No :</strong></div>
                            <div class="col-md-2 text-blue">
                                @Html.DisplayFor(x => x.TeethNo)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Partial("../Laboratory/_TestItemDetails", Model.TestItemList,
