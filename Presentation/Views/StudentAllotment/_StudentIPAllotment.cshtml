@model DIMS.ViewModels.StudentAllotmentViewModel
@{
    ViewBag.Title = "_StudentAllotment";
}

@functions
{
    public string GetUrl()
    {
        var user = User as DIMS.Infrastructure.CustomPrincipal;
        return user.GetRootUrl();
    }
}
 
<div>
    <form id="Allotform">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.Partial("../PatientInformation/_PatientAllotmentDetails", Model.patientInformationViewModel)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="box box-primary">
                <div class="box-header with-border">                   
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group form-group-sm">
                                @Html.LabelFor(x => x.ReferredReason, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.DisplayFor(x => x.ReferredReason)
                                </div>
                            </div>
                        </div>                         
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group form-group-sm">
                                @Html.LabelFor(x => x.StudentId, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.StudentId, new SelectList(Model.StudentAllotmentlist, "StudentId", "StudentName"), "Select", htmlAttributes: new { @class = "form-control" })
                                    @Html.HiddenFor(model => model.ReferredId)
                                    @Html.HiddenFor(model => model.AllotDate)
                                    @Html.HiddenFor(model => model.DeptId)
                                    @Html.HiddenFor(model => model.PatientId)
                                    @Html.HiddenFor(model => model.DeptCode)
                                    @Html.ValidationMessageFor(x => x.StudentId)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <a id="btnIPAllot" class="btn btn-success btn-sm"> Submit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   

                </div>
            </div>
        </div>
        @if (Model.PreviousAllotmentlist.Count() > 0)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.Partial("../StudentAllotment/_PreviousAllotment", Model.PreviousAllotmentlist)
                    </div>
                </div>
            </div>
        }
    </form>
</div>
<script type="text/javascript">

    $('#btnIPAllot').on('click', function () {
        
        var allotform = $("#Allotform").serialize();
        $.ajax({
            type: "POST",
            //url: "@GetUrl()/StudentAllotment/Create",
            url: '@Url.Action("IPCreate", "StudentAllotment")',
            data: allotform,
            success: function (data) {
                var $DeptCode = $("#DeptCode").val();
                $("#myModel").modal("hide");

                if ($DeptCode == 'OMFS') {
                    window.location.href = "@GetUrl()/OMFS/IPAllotment";
                }                
            },
            failure: function (response) {
                alert(response.responseText);
            },
        })
    });
</script>


