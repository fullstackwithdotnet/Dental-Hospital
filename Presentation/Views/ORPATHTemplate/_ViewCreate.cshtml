@model  DIMS.ViewModels.TemplateDetailsViewModel

@helper CreateCheckbox(string value)
{
    @Html.CheckBox("chkBox", !string.IsNullOrEmpty(value), new { @class = "checkbox", id = "chkHead" })
}

<div class="form-horizontal">

    <div class="col-md-12">
        <div class="row">
            <div>
                <div class="hidden">
                    @Html.LabelFor(model => model.RadioTempDetId)
                    @Html.LabelFor(model => model.RadioTempId)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.ServiceItems)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.MaleNormalRange)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.FemaleNormalRange)
                </div>
                <div class="col-md-1">
                    @Html.LabelFor(model => model.Unit)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DisplayOrder)
                </div>
                <div class="col-md-2">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group form-group-sm">
                <div class="hidden">
                    @Html.TextBoxFor(model => model.RadioTempDetId)
                    @Html.TextBoxFor(model => model.RadioTempId)
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.ServiceItems, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.MaleNormalRange, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.FemaleNormalRange, new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    @Html.TextBoxFor(model => model.Unit, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control OnlyNumber" })
                </div>
                <div class="col-md-2">
                    @Html.CheckBoxFor(x => x.IsChecked ,new{@class="js_getIsHeader"})
                    @Html.LabelFor(x => x.IsHeader)
                </div>
                <div class="col-md-1">
                    <input type="submit" id="btnOrpathAdd" value="Add" class="btn btn-success">
                </div>
            </div>

        </div>
    </div>

</div>