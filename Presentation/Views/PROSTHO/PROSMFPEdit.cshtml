                var row = $(this).closest('tr');   // Find the row
                var $tds = row.find("td");
                var varProsMaxilloProId = Id;

                var varMfpTreatmentDate = $tds.closest('tr').find('.iHidden').val();
                var varMfpTreatmentDescription = $tds.closest('tr').find('.js_MfpTreatmentDescription').val();
                var varMfpRemarks = $tds.closest('tr').find('.js_MfpRemarks').val();

                $("#ProsMaxilloProId").val(varProsMaxilloProId);
                $("#MfpTreatmentDateUpdate").val(varMfpTreatmentDate);
                $("#MfpTreatmentDescription").val(varMfpTreatmentDescription);
                $("#MfpRemarks").val(varMfpRemarks);

