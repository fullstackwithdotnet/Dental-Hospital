                <h3 class="box-title"> Fixed Partial Denture Casesheet</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">

                        @Html.Partial("../PatientInformation/_PatientInformationDetails", Model.patientInformationViewModel,
