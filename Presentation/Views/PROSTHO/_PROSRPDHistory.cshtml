                                @Html.TextAreaFor(model => model.MedicalHistoryOther, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5 class="subHeading1">Personal History</h5>
                    <div class="row">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(x => x.DietId, new { @class = "col-md-4 control-label" })
                            <div class="col-md-8 dropdown">
                                @Html.DropDownListFor(model => model.Diet, Model.DietLister, htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(model => model.Habits, new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Habits, new { @class = "form-control" })
