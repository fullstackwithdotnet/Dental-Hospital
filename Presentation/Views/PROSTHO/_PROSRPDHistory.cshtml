                                @Html.DropDownListFor(model => model.MedicalHistoryId, new SelectList(Model.MedicalHistoryList, "CodeId", "CodeDescription"), "", htmlAttributes: new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-group-sm">
                            @Html.LabelFor(model => model.MedicalHistoryOther, new { @class = "control-label col-md-4" })
