@using Metron.Entities
@model DIMS.ViewModels.PROSRPDViewModel

@functions{
    public string GetClassFromProperties(string propertyName)
    {
        var props = Model.Proplist.FirstOrDefault<PROSRPDCasesheetProperties>(x => x.PropertyName == propertyName);

        if (props != null && props.PropertyVisibility == "N")
        {
            return "display:none";
        }

        return "";
    }
}

@helper CreateCheckbox(string value)
{
    @Html.CheckBox("chkBox", !string.IsNullOrEmpty(value), new { @class = "checkbox-inline" })
}

<div class="row">
    <div class="col-md-12">
        <div class="form-group form-group-sm ">
            @Html.ValidationMessageFor(model => model.ProsthoRPDDate)
            @Html.HiddenFor(model => model.TreatmentReferredId)
            @Html.HiddenFor(model => model.PatientId)
            @Html.HiddenFor(model => model.ProsthoRPDId)
            @Html.HiddenFor(model => model.AllotId)
        </div>
    </div>

    <div class="col-md-12">
        <div class="col-md-2"></div>
        <div class="col-md-1 control-label">
            <div class="form-group form-group-sm ">
                @Html.LabelFor(x => x.PpdAcrylic)
                @Html.CheckBoxFor(x => x.PpdAcrylic)
            </div>
        </div>
        <div class="col-md-1 control-label">
            <div class="form-group form-group-sm ">
                @Html.LabelFor(x => x.CpdMetallic)
                @Html.CheckBoxFor(x => x.CpdMetallic)
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="form-group form-group-sm required">
        @Html.LabelFor(x => x.ChiefComplaintName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(x => x.ChiefComplaint, new { @class = "form-control", required = "required" })
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group form-group-sm ">
        @Html.LabelFor(model => model.ExperienceOfOldDen, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ExperienceOfOldDen, new { @class = "form-control" })
