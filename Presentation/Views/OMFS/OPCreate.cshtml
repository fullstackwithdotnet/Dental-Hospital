@section scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $("#LabRadServiceName").change(function() {
                var parentId = $(this).find('option:selected').val();
                var departmentId = $('#ServiceDeptName').find('option:selected').val();
                getSubServices(parentId, departmentId);
                /*$('#subService').select2({
                    placeholder: 'Select an option',
                    multiple: true,
                    tokenSeparators: [','],
                });*/
            });


            function getSubServices(parentId, departmentId) {
                $('#subService').empty();
                //$('#subService').append('<option value="0">--- SELECT SUB SERVICE ---</option>');
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetSubServiceDetailByParent", "BillingServices")',
                    data: '{departmentId: "' + departmentId + '", parentId: "' + parentId + '"}',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {

                        $.each(data, function (i, detail) {
                            $('#subService').append('<option value="' + detail.ServiceId + '">' +
                                detail.ServiceName + '</option>');
                        });
                    }
                });
            }

        });
    </script>
