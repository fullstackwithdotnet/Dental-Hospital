
@model DIMS.ViewModels.OMFSIPOperativeVitalsDetailsViewModel

@helper CreateCheckbox(string value)
{
    @Html.CheckBox("chkBox", !string.IsNullOrEmpty(value), new { @class = "checkbox-inline" })
}

@functions {
    object getHtmlAttributes(string value, string CssClass)
    {
        if (string.IsNullOrEmpty(value))
        {
            return new { @class = CssClass, disabled = "disabled" };
        }
        return new { @class = CssClass };
    }
}
 
 

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="form-group form-group-sm">
                @Html.LabelFor(x => x.VitalDate, new { @class = "col-md-1 control-label" })
                <div class="col-md-3">
                    @Html.EditorFor(x => x.VitalDate, new { @class = "form-control" })
                 </div>
                <div class="col-md-1"></div>
                @Html.LabelFor(x => x.VitalTime, new { @class = "col-md-1 control-label" })
                <div class="col-md-2">
                    @Html.TextBoxFor(x => x.VitalTime, new { @class = "timepicker form-control" } )
                </div>
                @Html.LabelFor(x => x.Pulse, new { @class = "col-md-1 control-label" })
                <div class="col-md-2">
                    @Html.TextBoxFor(x => x.Pulse, new { @class = "form-control" })
                </div>                            
            </div>
            <div class="form-group form-group-sm">
                @Html.LabelFor(x => x.Bp, new { @class = "col-md-1 control-label" })
                <div class="col-md-1">
                    @Html.TextBoxFor(x => x.Bp, new { @class = "form-control" })
                </div>    
                              
                <div class="col-md-1">
                    @Html.TextBoxFor(x => x.VitalBp, new { @class = "form-control" })
                </div>
                <div  class="col-md-1">mmHg </div>
                @Html.LabelFor(x => x.RespiratoryRate, new { @class = "col-md-2 control-label" })
                <div class="col-md-2">
                    @Html.TextBoxFor(x => x.RespiratoryRate, new { @class = "form-control" })
                </div>   
                @Html.LabelFor(x => x.Temperature, new { @class = "col-md-1 control-label" })
                <div class="col-md-2">
                    @Html.TextBoxFor(x => x.Temperature, new { @class = "form-control" })
                </div>   
                <div class="col-md-offset-5">
                    <a href="#" class="btn btn-success" id="btnvitalAdd">Add</a>
                </div>           
            </div>

        </div>
    </div>
</div>
